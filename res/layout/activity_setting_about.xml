<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    >
    
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.intel.shangbanla.view.SettingActivity" >

  <ImageView 
      android:id="@+id/iv_setting"
      android:layout_marginTop="@dimen/abc_action_bar_default_height"
      android:layout_gravity="center_horizontal"
      android:src="@drawable/intel_logo_2"
      android:contentDescription="@string/app_name"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"/>

  <TextView
      android:id="@+id/tv_app_version"
      android:layout_marginBottom="@dimen/abc_action_bar_default_height"
       android:textColor="@color/base_gray_595959"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_gravity="center_horizontal"/>
  
  <ListView 
      android:id="@+id/lv_setting_about"
      android:dividerHeight="0.5dp"
      android:layout_weight="1.0"
      android:layout_height="0dp"
      android:layout_width="fill_parent"
      ></ListView>
  <TextView
      android:layout_margin="@dimen/title_height"
      android:id="@+id/txt_private"
      android:layout_gravity="center_horizontal|bottom"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/v3_blue_soft"
      android:text="@string/personal_txt_private"
      ></TextView>
</LinearLayout>
   <com.intel.store.widget.LoadingView
        android:id="@id/common_id_ll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30000000"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >
    </com.intel.store.widget.LoadingView>

</FrameLayout>