<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_bg_selector"
    android:orientation="horizontal"
    android:paddingLeft="20dp" >

    <TextView
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/tv_photoCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:text="@string/app_name"
        android:textColor="@color/base_gray_595959"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_zuokuohao"
        android:layout_toRightOf="@+id/tv_photoCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="("
        android:layout_marginRight="5dp"
        android:textColor="@color/base_gray_595959"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_pic_qty"
        android:layout_toRightOf="@+id/tv_zuokuohao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:textColor="@color/base_blue_92cfe4_normal"
        android:textSize="18sp" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_pic_qty"
        android:id="@+id/tv_youkuohao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text=")"
        android:textColor="@color/base_gray_595959"
        android:textSize="18sp" />

    <ImageView
        android:contentDescription="@string/app_name"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:id="@+id/iv_cmnts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_wenhao" />

</RelativeLayout>